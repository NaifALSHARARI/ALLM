@model HakayaatBilArabiya.Models.StoryInputModel

@{
    ViewData["Title"] = "Generate Story";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="/css/Stories.css" />
    <style>
        body {
            background-color: #d4f0f9;
            text-align: center;
        }

        h2 {
            color: #ff7f50;
            font-size: 48px;
            margin-top: 30px;
            text-align: center;
        }

        label {
            font-size: 24px;
            margin-bottom: 10px;
            display: block;
            color: #333;
        }

        input[type="text"], textarea, select {
            width: 60%;
            font-size: 18px;
            padding: 10px;
            border: 2px solid #ff7f50;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: right;
        }

        textarea {
            height: 100px;
            resize: none;
        }

        button {
            background-color: #ff7f50;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 24px;
            cursor: pointer;
            border-radius: 8px;
        }

            button:hover {
                background-color: #e45e30;
            }

        .category-title {
            color: #80c4e9;
            font-size: 36px;
            margin-bottom: 10px;
        }

        .category-section {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            margin-bottom: 40px;
        }

        .category-item {
            width: 150px;
            text-align: center;
            color: #ff7f50;
            font-size: 20px;
            cursor: pointer;
            position: relative;
        }

            .category-item img {
                width: 150px;
                height: 150px;
                border-radius: 10px;
                object-fit: cover;
                transition: transform 0.2s;
            }

            .category-item.selected img {
                border: 4px solid #ff7f50;
                transform: scale(1.05);
            }

        .section {
            margin-top: 50px;
        }

        .side-options {
            margin-top: 40px;
            background-color: #e8f7f9;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            color: #333;
            width: 60%;
            margin: 40px auto;
        }
    </style>
}

<h2 class="speakable" onclick="speakText(this.innerText)">إنشاء قصة جديدة</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger speakable" onclick="speakText(this.innerText)">
        @ViewBag.Error
    </div>
}

<form asp-action="GenerateStory" method="post">
    @Html.HiddenFor(m => m.Characters, new { id = "Characters" })
    @Html.HiddenFor(m => m.Animals, new { id = "Animals" })
    @Html.HiddenFor(m => m.Place, new { id = "Place" })
    @Html.HiddenFor(m => m.Season, new { id = "Season" })
    @Html.HiddenFor(m => m.Time, new { id = "Time" })

    <div class="section">
